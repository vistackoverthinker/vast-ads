<VAST version="3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Ad id="preroll">
    <InLine>
      <AdSystem>Example</AdSystem>
      <AdTitle>Pre-Roll Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/preroll]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360"><![CDATA[https://test-streams.mux.dev/x36xhzz/x36xhzz.m3u8]]></MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <Ad id="midroll">
    <InLine>
      <AdSystem>Example</AdSystem>
      <AdTitle>Mid-Roll Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/midroll]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360"><![CDATA[https://test-streams.mux.dev/x36xhzz/x36xhzz.m3u8]]></MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
