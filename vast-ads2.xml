<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- Pre-roll Video Ad -->
  <Ad id="pre-roll-1" sequence="1">
    <InLine>
      <AdSystem>Custom Test Server</AdSystem>
      <AdTitle>Pre-roll Video Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/pre]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/tracking/start/pre]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://example.com/tracking/firstQuartile/pre]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://example.com/tracking/midpoint/pre]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://example.com/tracking/thirdQuartile/pre]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/tracking/complete/pre]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

