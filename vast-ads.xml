<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.0">
  
  <!-- Pre-roll Ad -->
  <Ad id="preroll-1" sequence="1">
    <InLine>
      <AdSystem>ExampleAdServer</AdSystem>
      <AdTitle>Pre-roll Video Ad</AdTitle>
      <Impression>
        <![CDATA[https://example.com/impression/preroll]]>
      </Impression>
      <Creatives>
        <Creative sequence="1" id="preroll-creative">
          <Linear skipoffset="00:00:05">
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start">
                <![CDATA[https://example.com/tracking/start/preroll]]>
              </Tracking>
              <Tracking event="firstQuartile">
                <![CDATA[https://example.com/tracking/firstQuartile/preroll]]>
              </Tracking>
              <Tracking event="midpoint">
                <![CDATA[https://example.com/tracking/midpoint/preroll]]>
              </Tracking>
              <Tracking event="thirdQuartile">
                <![CDATA[https://example.com/tracking/thirdQuartile/preroll]]>
              </Tracking>
              <Tracking event="complete">
                <![CDATA[https://example.com/tracking/complete/preroll]]>
              </Tracking>
              <Tracking event="skip">
                <![CDATA[https://example.com/tracking/skip/preroll]]>
              </Tracking>
              <Tracking event="mute">
                <![CDATA[https://example.com/tracking/mute/preroll]]>
              </Tracking>
              <Tracking event="unmute">
                <![CDATA[https://example.com/tracking/unmute/preroll]]>
              </Tracking>
              <Tracking event="pause">
                <![CDATA[https://example.com/tracking/pause/preroll]]>
              </Tracking>
              <Tracking event="resume">
                <![CDATA[https://example.com/tracking/resume/preroll]]>
              </Tracking>
            </TrackingEvents>
            <VideoClicks>
              <ClickThrough>
                <![CDATA[https://example.com/clickthrough/preroll]]>
              </ClickThrough>
              <ClickTracking>
                <![CDATA[https://example.com/tracking/click/preroll]]>
              </ClickTracking>
            </VideoClicks>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720" bitrate="1000" scalable="true" maintainAspectRatio="true">
                <![CDATA[http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
              <MediaFile delivery="progressive" type="video/mp4" width="854" height="480" bitrate="500" scalable="true" maintainAspectRatio="true">
                <![CDATA[http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
        
        <!-- Companion Ad for Pre-roll -->
        <Creative sequence="1" id="preroll-companion-creative">
          <CompanionAds>
            <Companion width="300" height="250">
              <StaticResource creativeType="image/png">
                <![CDATA[https://picsum.photos/300/250?random=1]]>
              </StaticResource>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/tracking/companionView/preroll]]>
                </Tracking>
              </TrackingEvents>
              <CompanionClickThrough>
                <![CDATA[https://example.com/companionClick/preroll]]>
              </CompanionClickThrough>
            </Companion>
            <Companion width="728" height="90">
              <StaticResource creativeType="image/png">
                <![CDATA[https://picsum.photos/728/90?random=2]]>
              </StaticResource>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/tracking/companionView/preroll/leaderboard]]>
                </Tracking>
              </TrackingEvents>
              <CompanionClickThrough>
                <![CDATA[https://example.com/companionClick/preroll/leaderboard]]>
              </CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

