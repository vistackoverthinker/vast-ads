<VAST xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.2">

  <!-- Pre-roll Video Ad (from first XML) -->
  <Ad id="pre-roll-1" sequence="1">
    <InLine>
      <AdSystem>Custom Test Server</AdSystem>
      <AdTitle>Pre-roll Video Ad</AdTitle>
      <Impression><![CDATA[ https://example.com/impression/pre ]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[ https://example.com/tracking/start/pre ]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[ https://example.com/tracking/firstQuartile/pre ]]></Tracking>
              <Tracking event="midpoint"><![CDATA[ https://example.com/tracking/midpoint/pre ]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[ https://example.com/tracking/thirdQuartile/pre ]]></Tracking>
              <Tracking event="complete"><![CDATA[ https://example.com/tracking/complete/pre ]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[ https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4 ]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- Mid-roll Video Ad -->
  <Ad id="mid-roll-1" sequence="2">
    <InLine>
      <AdSystem>Custom Test Server</AdSystem>
      <AdTitle>Mid-roll Video Ad</AdTitle>
      <Impression><![CDATA[ https://example.com/impression/mid ]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[ https://example.com/tracking/start/mid ]]></Tracking>
              <Tracking event="complete"><![CDATA[ https://example.com/tracking/complete/mid ]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[ https://storage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4 ]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
   <Ad id="pause-ad">
    <InLine>
      <AdSystem>Plyr Test Server</AdSystem>
      <AdTitle>Pause Ad</AdTitle>
      <Impression><![CDATA[ https://yourdomain.test/impression/pause ]]></Impression>
      <Creatives>
        <Creative id="pause-creative">
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720" scalable="true" maintainAspectRatio="true">
                <![CDATA[ https://cdn.plyr.io/static/demo/View_From_A_Blue_Moon_Trailer-720p.mp4 ]]>
              </MediaFile>
            </MediaFiles>
            <VideoClicks>
              <ClickThrough><![CDATA[ https://yourdomain.test/pause-landing ]]></ClickThrough>
              <ClickTracking><![CDATA[ https://yourdomain.test/click/pause ]]></ClickTracking>
            </VideoClicks>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[ https://yourdomain.test/tracking/start/pause ]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[ https://yourdomain.test/tracking/firstQuartile/pause ]]></Tracking>
              <Tracking event="midpoint"><![CDATA[ https://yourdomain.test/tracking/midpoint/pause ]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[ https://yourdomain.test/tracking/thirdQuartile/pause ]]></Tracking>
              <Tracking event="complete"><![CDATA[ https://yourdomain.test/tracking/complete/pause ]]></Tracking>
            </TrackingEvents>
            <CompanionAds>
              <Companion width="300" height="250" id="pause-companion">
                <StaticResource creativeType="image/png"><![CDATA[ https://i.postimg.cc/3wR9z5nB/sample-companion.png ]]></StaticResource>
                <CompanionClickThrough><![CDATA[ https://yourdomain.test/pause-companion-landing ]]></CompanionClickThrough>
                <TrackingEvents>
                  <Tracking event="creativeView"><![CDATA[ https://yourdomain.test/tracking/companionView/pause ]]></Tracking>
                </TrackingEvents>
                <AltText>Pause Companion Ad</AltText>
              </Companion>
            </CompanionAds>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- Post-roll Video Ad -->
  <Ad id="post-roll-1" sequence="3">
    <InLine>
      <AdSystem>Custom Test Server</AdSystem>
      <AdTitle>Post-roll Video Ad</AdTitle>
      <Impression><![CDATA[ https://example.com/impression/post ]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[ https://example.com/tracking/start/post ]]></Tracking>
              <Tracking event="complete"><![CDATA[ https://example.com/tracking/complete/post ]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[ https://storage.googleapis.com/gtv-videos-bucket/sample/Sintel.mp4 ]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- Pause Ad (merged, from second XML with more detail) -->
 

  <!-- Standalone Companion Ad -->
  <Ad id="companion-ad">
    <InLine>
      <AdSystem>Plyr Test Server</AdSystem>
      <AdTitle>Companion Ad</AdTitle>
      <Impression><![CDATA[ https://yourdomain.test/impression/companion ]]></Impression>
      <Creatives>
        <Creative id="companion-creative">
          <CompanionAds>
            <Companion width="300" height="250" id="companion1">
              <StaticResource creativeType="image/jpeg"><![CDATA[ https://i.postimg.cc/Gt1d6rPv/companion1.jpg ]]></StaticResource>
              <CompanionClickThrough><![CDATA[ https://yourdomain.test/companion-landing ]]></CompanionClickThrough>
              <TrackingEvents>
                <Tracking event="creativeView"><![CDATA[ https://yourdomain.test/tracking/companionView/companion1 ]]></Tracking>
              </TrackingEvents>
              <AltText>Main Companion Ad</AltText>
            </Companion>
            <Companion width="728" height="90" id="companion2">
              <HTMLResource><![CDATA[
                <div style="background:#f0f0f0;border:1px solid #ccc;width:728px;height:90px;text-align:center;">
                  <a href="https://yourdomain.test/companion-landing" target="_blank">
                    <img src="https://i.postimg.cc/KzM0kG3v/companion2.jpg" width="728" height="90" alt="Banner Ad" />
                  </a>
                </div>
              ]]></HTMLResource>
              <TrackingEvents>
                <Tracking event="creativeView"><![CDATA[ https://yourdomain.test/tracking/companionView/companion2 ]]></Tracking>
              </TrackingEvents>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

</VAST>

