<VAST version="4.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vast.xsd">
  <Ad id="pre-roll">
    <InLine>
      <AdSystem>Test Ad Server</AdSystem>
      <AdTitle>Pre-roll with Companion</AdTitle>
      <Impression>https://example.com/track/impression</Impression>
      <Creatives>
        <Creative id="video-creative" sequence="1">
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
                <![CDATA[https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerJoyrides.mp4]]>
              </MediaFile>
            </MediaFiles>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://example.com/track/firstQuartile]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://example.com/track/midpoint]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://example.com/track/thirdQuartile]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/complete]]></Tracking>
            </TrackingEvents>
            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/clickthrough]]></ClickThrough>
            </VideoClicks>
          </Linear>
        </Creative>
        <Creative id="companion-creative">
          <CompanionAds>
            <Companion width="300" height="250">
              <StaticResource creativeType="image/png">
                <![CDATA[https://via.placeholder.com/300x250/0000FF/FFFFFF?text=Companion+Ad]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[https://example.com/companion-click]]>
              </CompanionClickThrough>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/track/companion-view]]>
                </Tracking>
              </TrackingEvents>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
  <Ad id="pause-ad">
    <InLine>
      <AdSystem>Test Ad Server</AdSystem>
      <AdTitle>Pause Ad with Small Companion</AdTitle>
      <Impression>https://example.com/track/pause-impression</Impression>
      <Creatives>
        <Creative id="pause-creative">
          <Linear>
            <Duration>00:00:10</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
                <![CDATA[https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerBlazes.mp4]]>
              </MediaFile>
            </MediaFiles>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/pause-start]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/pause-complete]]></Tracking>
            </TrackingEvents>
          </Linear>
        </Creative>
        <Creative id="pause-companion">
          <CompanionAds>
            <Companion width="300" height="100">
              <StaticResource creativeType="image/png">
                <![CDATA[https://via.placeholder.com/300x100/FF0000/FFFFFF?text=Pause+Companion]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[https://example.com/pause-companion-click]]>
              </CompanionClickThrough>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/track/pause-companion-view]]>
                </Tracking>
              </TrackingEvents>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
  <Ad id="mid-roll">
    <InLine>
      <AdSystem>Test Ad Server</AdSystem>
      <AdTitle>Mid-roll with Multiple Companions</AdTitle>
      <Impression>https://example.com/track/mid-impression</Impression>
      <Creatives>
        <Creative id="mid-video-creative" sequence="2">
          <Linear>
            <Duration>00:00:20</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
                <![CDATA[https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerEscapes.mp4]]>
              </MediaFile>
            </MediaFiles>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/mid-start]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/mid-complete]]></Tracking>
            </TrackingEvents>
            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/mid-clickthrough]]></ClickThrough>
            </VideoClicks>
          </Linear>
        </Creative>
        <Creative id="mid-companion-1">
          <CompanionAds>
            <Companion width="300" height="250">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://picsum.photos/300/250?random=1]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[https://example.com/mid-companion1-click]]>
              </CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
        <Creative id="mid-companion-2">
          <CompanionAds>
            <Companion width="728" height="90">
              <HTMLResource>
                <![CDATA[
                  <div style="width:728px;height:90px;background:#FF9900;color:white;text-align:center;line-height:90px;font-family:Arial;">
                    HTML Companion Ad (728x90)
                  </div>
                ]]>
              </HTMLResource>
              <CompanionClickThrough>
                <![CDATA[https://example.com/mid-companion2-click]]>
              </CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
</VAST>
