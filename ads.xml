<?xml version="1.0" encoding="UTF-8"?>
<VAST version="3.0">
  <!-- PREROLL AD (Test 15s video) -->
  <Ad id="preroll">
    <InLine>
      <AdSystem>Test Ad Server</AdSystem>
      <AdTitle>Sample Preroll</AdTitle>
      <Impression>https://example.com/track?ad=preroll</Impression>
      <Creatives>
        <Creative id="preroll-video">
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <!-- Sample video from Wikimedia Commons -->
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720" codec="avc1.42E01E">
                https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerJoyrides.mp4
              </MediaFile>
            </MediaFiles>
            <VideoClicks>
              <ClickThrough>https://example.com/click?ad=preroll</ClickThrough>
            </VideoClicks>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- PAUSE AD (Test 10s video) -->
  <Ad id="pause-ad">
    <InLine>
      <AdSystem>Test Ad Server</AdSystem>
      <AdTitle>Sample Pause Ad</AdTitle>
      <Impression>https://example.com/track?ad=pause</Impression>
      <Creatives>
        <Creative id="pause-video">
          <Linear>
            <Duration>00:00:10</Duration>
            <MediaFiles>
              <!-- Sample video from Google -->
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
                https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerBlazes.mp4
              </MediaFile>
            </MediaFiles>
            <VideoClicks>
              <ClickThrough>https://example.com/click?ad=pause</ClickThrough>
            </VideoClicks>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- COMPANION AD (Test banner) -->
  <Ad id="companion">
    <InLine>
      <AdSystem>Test Ad Server</AdSystem>
      <AdTitle>Sample Companion</AdTitle>
      <Impression>https://example.com/track?ad=companion</Impression>
      <Creatives>
        <Creative id="companion-banner">
          <CompanionAds>
            <!-- Sample 300x250 banner from Placeholder.com -->
            <Companion width="300" height="250">
              <StaticResource creativeType="image/jpeg">
                https://via.placeholder.com/300x250
              </StaticResource>
              <CompanionClickThrough>https://example.com/click?ad=companion</CompanionClickThrough>
              <AltText>Advertisement</AltText>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
</VAST>
