<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.2">
  
  <!-- Pre-Roll Ad - 15s Test Video -->
  <Ad id="pre-roll">
    <InLine>
      <AdSystem>TestServer</AdSystem>
      <AdTitle>Pre-Roll Test</AdTitle>
      <Impression><![CDATA[https://vmap.snapsnapcontent.net/api/v1/track?type=impression&adid=pre]]></Impression>
      <Creatives>
        <Creative>
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
                <![CDATA[https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerJoyrides.mp4]]>
              </MediaFile>
            </MediaFiles>
            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com]]></ClickThrough>
            </VideoClicks>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://vmap.snapsnapcontent.net/api/v1/track?event=start&adid=pre]]></Tracking>
              <Tracking event="complete"><![CDATA[https://vmap.snapsnapcontent.net/api/v1/track?event=complete&adid=pre]]></Tracking>
            </TrackingEvents>
            <CompanionAds>
              <Companion width="300" height="250">
                <StaticResource creativeType="image/jpeg">
                  <![CDATA[https://via.placeholder.com/300x250?text=Pre-Roll+Companion]]>
                </StaticResource>
              </Companion>
            </CompanionAds>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

