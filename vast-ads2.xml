<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="vast.xsd">
    <Ad id="preroll-1">
        <InLine>
            <AdSystem>CustomAdServer</AdSystem>
            <AdTitle>Pre-roll Video Ad</AdTitle>
            <Impression><![CDATA[https://example.com/track/impression/preroll]]></Impression>
            <Creatives>
                <Creative id="1" sequence="1">
                    <Linear>
                        <Duration>00:00:10</Duration>
                        <MediaFiles>
                            <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                                <![CDATA[https://example.com/media/preroll.mp4]]>
                            </MediaFile>
                        </MediaFiles>
                        <TrackingEvents>
                            <Tracking event="start"><![CDATA[https://example.com/track/start/preroll]]></Tracking>
                            <Tracking event="complete"><![CDATA[https://example.com/track/complete/preroll]]></Tracking>
                        </TrackingEvents>
                    </Linear>
                </Creative>
            </Creatives>
        </InLine>
    </Ad>

    <Ad id="midroll-1">
        <InLine>
            <AdSystem>CustomAdServer</AdSystem>
            <AdTitle>Mid-roll Video Ad</AdTitle>
