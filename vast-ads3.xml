<VAST version="4.2">

  <!-- ðŸ”¹ Pause Ad (image overlay on pause) -->
  <Ad id="pause-banner">
    <InLine>
      <Creatives>
        <Creative>
          <NonLinearAds>
            <NonLinear width="300" height="250" minSuggestedDuration="15">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://picsum.photos/id/237/300/250]]>
              </StaticResource>
              <NonLinearClickThrough>
                <![CDATA[https://openai.com]]>
              </NonLinearClickThrough>
            </NonLinear>
          </NonLinearAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- ðŸ”¹ Pause-Triggered Ad (video plays when paused) -->
  <Ad id="pause-video">
    <InLine>
      <Creatives>
        <Creative>
          <Linear>
            <Duration>00:00:10</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- ðŸ”¹ Companion Ad (sidebar/overlay image) -->
  <Ad id="companion-test">
    <InLine>
      <Creatives>
        <Creative>
          <CompanionAds>
            <Companion width="300" height="250">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://picsum.photos/id/1025/300/250]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[https://wikipedia.org]]>
              </CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

</VAST>
