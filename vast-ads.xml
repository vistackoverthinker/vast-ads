  </Ad>

  <!-- Pause Ad (Non-linear Companion) -->
  <Ad id="pause-ad-1" sequence="4">
    <InLine>
      <AdSystem>Example</AdSystem>
      <AdTitle>Pause Ad Banner</AdTitle>
      <Impression><![CDATA[https://example.com/impression/pause]]></Impression>
      <Creatives>
        <Creative>
          <CompanionAds>
            <Companion width="300" height="250">
              <StaticResource creativeType="image/png">
                <![CDATA[https://via.placeholder.com/300x250?text=Pause+Ad]]>
              </StaticResource>
              <TrackingEvents>
                <Tracking event="creativeView"><![CDATA[https://example.com/tracking/pause]]></Tracking>
              </TrackingEvents>
              <CompanionClickThrough><![CDATA[https://example.com/click/pause]]></CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
</VAST>
