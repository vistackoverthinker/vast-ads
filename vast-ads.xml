              <Tracking event="complete"><![CDATA[https://example.com/tracking/complete/mid]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.webm]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

