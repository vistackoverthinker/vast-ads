<?xml version="1.0" encoding="UTF-8"?>
<VAST xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.2">

  <!-- ✅ Pre-roll Video Ad -->
  <Ad id="pre-roll-1" sequence="1">
    <InLine>
      <AdSystem>Test Server</AdSystem>
      <AdTitle>Pre-roll Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/pre]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/tracking/start/pre]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/tracking/complete/pre]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- ✅ Mid-roll Video Ad -->
  <Ad id="mid-roll-1" sequence="2">
    <InLine>
      <AdSystem>Test Server</AdSystem>
      <AdTitle>Mid-roll Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/mid]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/tracking/start/mid]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/tracking/complete/mid]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- ✅ Pause Ad as Linear Video -->
  <Ad id="pause-ad-1">
    <InLine>
      <AdSystem>Test Server</AdSystem>
      <AdTitle>Pause Video Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/pause]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:06</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/tracking/start/pause]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/tracking/complete/pause]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/TearsOfSteel.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

</VAST>
