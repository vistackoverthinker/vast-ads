<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.2">
  <!-- =========================
       PRE-ROLL LINEAR (NO SKIP)
       ========================= -->
  <Ad id="preroll-001">
    <InLine>
      <AdSystem version="1.0">Sample Ad Server</AdSystem>
      <AdTitle>Pre-roll Linear Ad</AdTitle>

      <Impression><![CDATA[https://example.com/track/impression/preroll]]></Impression>

      <Creatives>
        <Creative id="preroll-linear" sequence="1">
          <Linear>
            <Duration>00:00:20</Duration>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start/preroll]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://example.com/track/firstQuartile/preroll]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://example.com/track/midpoint/preroll]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://example.com/track/thirdQuartile/preroll]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/complete/preroll]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/landing/preroll]]></ClickThrough>
            </VideoClicks>

            <MediaFiles>
              <MediaFile id="mp4" delivery="progressive" type="video/mp4" width="1280" height="720" bitrate="1200">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- =========================
       MID-ROLL LINEAR (NO SKIP)
       ========================= -->
  <Ad id="midroll-001">
    <InLine>
      <AdSystem version="1.0">Sample Ad Server</AdSystem>
      <AdTitle>Mid-roll Linear Ad</AdTitle>

      <Impression><![CDATA[https://example.com/track/impression/midroll]]></Impression>

      <Creatives>
        <Creative id="midroll-linear" sequence="2">
          <Linear>
            <Duration>00:00:15</Duration>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start/midroll]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://example.com/track/firstQuartile/midroll]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://example.com/track/midpoint/midroll]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://example.com/track/thirdQuartile/midroll]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/complete/midroll]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/landing/midroll]]></ClickThrough>
            </VideoClicks>

            <MediaFiles>
              <MediaFile id="mp4" delivery="progressive" type="video/mp4" width="1280" height="720" bitrate="1000">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>

      <!-- Use an Extension to signal it's a mid-roll -->
      <Extensions>
        <Extension type="position"><![CDATA[midroll]]></Extension>
      </Extensions>
    </InLine>
  </Ad>
</VAST>
