<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- =========================
       PRE-ROLL LINEAR (SKIPPABLE) + COMPANIONS
       ========================= -->
  <Ad id="preroll-001">
    <InLine>
      <AdSystem version="1.0">Sample Ad Server</AdSystem>
      <AdTitle>Pre-roll Skippable Linear</AdTitle>

      <Impression><![CDATA[https://example.com/track/impression/preroll]]></Impression>

      <Creatives>
        <!-- Linear Creative -->
        <Creative id="preroll-linear" sequence="1">
          <Linear skipoffset="00:05">
            <Duration>00:00:20</Duration>

            <!-- SKIP BUTTON OVERLAY -->
            <Icons>
              <Icon program="skip-control" width="120" height="36" xPosition="right" yPosition="top" offset="00:05" duration="00:00:15">
                <StaticResource creativeType="image/png">
                  <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]>
                </StaticResource>
                <IconClicks>
                  <IconClickThrough><![CDATA[javascript:playerSkipAd()]]></IconClickThrough>
                </IconClicks>
              </Icon>
            </Icons>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start/preroll]]></Tracking>
              <Tracking event="skip"><![CDATA[https://example.com/track/skip/preroll]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/landing/preroll]]></ClickThrough>
            </VideoClicks>

            <MediaFiles>
              <MediaFile id="mp4" delivery="progressive" type="video/mp4" width="1280" height="720" bitrate="1200">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>

        <!-- Companion Banners -->
        <Creative id="preroll-companions">
          <CompanionAds>
            <Companion id="c-300x250" width="300" height="250">
              <StaticResource creativeType="image/jpeg"><![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]></StaticResource>
              <CompanionClickThrough><![CDATA[https://example.com/landing/preroll-companion]]></CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- =========================
       PAUSE-TRIGGERED LINEAR (SKIPPABLE) + COMPANIONS
       ========================= -->
  <Ad id="pause-linear-001">
    <InLine>
      <AdSystem version="1.0">Sample Ad Server</AdSystem>
      <AdTitle>Pause-Triggered Skippable Linear</AdTitle>

      <Impression><![CDATA[https://example.com/track/impression/pause-linear]]></Impression>

      <Creatives>
        <!-- Linear Creative -->
        <Creative id="pause-linear" sequence="1">
          <Linear skipoffset="00:03">
            <Duration>00:00:15</Duration>

            <!-- SKIP BUTTON OVERLAY -->
            <Icons>
              <Icon program="skip-control" width="120" height="36" xPosition="right" yPosition="top" offset="00:03" duration="00:00:12">
                <StaticResource creativeType="image/png">
                  <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]>
                </StaticResource>
                <IconClicks>
                  <IconClickThrough><![CDATA[javascript:playerSkipAd()]]></IconClickThrough>
                </IconClicks>
              </Icon>
            </Icons>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start/pause-linear]]></Tracking>
              <Tracking event="skip"><![CDATA[https://example.com/track/skip/pause-linear]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/landing/pause-linear]]></ClickThrough>
            </VideoClicks>

            <MediaFiles>
              <MediaFile id="mp4" delivery="progressive" type="video/mp4" width="1280" height="720" bitrate="1200">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>

        <!-- Companion Banner -->
        <Creative id="pause-companion">
          <CompanionAds>
            <Companion id="pause-300x250" width="300" height="250">
              <StaticResource creativeType="image/jpeg"><![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]></StaticResource>
              <CompanionClickThrough><![CDATA[https://example.com/landing/pause-companion]]></CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>

      <Extensions>
        <Extension type="trigger"><![CDATA[pause]]></Extension>
      </Extensions>
    </InLine>
  </Ad>

  <!-- =========================
       OPTIONAL: PAUSE OVERLAY (NON-LINEAR)
       ========================= -->
  <Ad id="pause-overlay-001">
    <InLine>
      <AdSystem version="1.0">Sample Ad Server</AdSystem>
      <AdTitle>Pause Overlay (Non-Linear)</AdTitle>

      <Impression><![CDATA[https://example.com/track/impression/pause-overlay]]></Impression>

      <Creatives>
        <Creative id="pause-overlay">
          <NonLinearAds>
            <NonLinear id="overlay-728x90" width="728" height="90" minSuggestedDuration="00:00:10">
              <StaticResource creativeType="image/jpeg"><![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]></StaticResource>
              <NonLinearClickThrough><![CDATA[https://example.com/landing/pause-overlay]]></NonLinearClickThrough>
            </NonLinear>
          </NonLinearAds>
        </Creative>
      </Creatives>

      <Extensions>
        <Extension type="trigger"><![CDATA[pause]]></Extension>
      </Extensions>
    </InLine>
  </Ad>
</VAST>
