  <!-- PRE-ROLL AD -->
  <Ad id="preroll-001" adType="video" sequence="1">
    <InLine>
      <AdSystem version="1.0">YourAdSystem</AdSystem>
      <AdTitle><![CDATA[Pre-Roll Video Advertisement]]></AdTitle>
      <Description><![CDATA[Engaging pre-roll content to capture viewer attention]]></Description>
      <Survey><![CDATA[https://example.com/survey?ad=preroll-001]]></Survey>
      <Error><![CDATA[https://example.com/error?ad=preroll-001&error=[ERRORCODE]]]></Error>
      <Impression><![CDATA[https://example.com/impression?ad=preroll-001&cache=[CACHEBUSTING]]]></Impression>
      
      <Pricing model="CPM" currency="USD"><![CDATA[2.50]]></Pricing>
      <AdVerifications>
        <Verification vendor="Moat">
          <JavaScriptResource apiFramework="omid" browserOptional="false">
            <![CDATA[https://z.moatads.com/addthismoatvideo464934693834/moatvideo.js]]>
          </JavaScriptResource>
          <TrackingEvents>
            <Tracking event="verificationNotExecuted">
              <![CDATA[https://example.com/verification/not-executed]]>
            </Tracking>
          </TrackingEvents>
        </Verification>
      </AdVerifications>

      <Creatives>
        <Creative id="preroll-creative-001" adId="preroll-001">
          <Linear>
            <Duration>00:00:30</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/tracking/preroll/start]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://example.com/tracking/preroll/25percent]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://example.com/tracking/preroll/50percent]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://example.com/tracking/preroll/75percent]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/tracking/preroll/complete]]></Tracking>
              <Tracking event="mute"><![CDATA[https://example.com/tracking/preroll/mute]]></Tracking>
              <Tracking event="unmute"><![CDATA[https://example.com/tracking/preroll/unmute]]></Tracking>
              <Tracking event="pause"><![CDATA[https://example.com/tracking/preroll/pause]]></Tracking>
              <Tracking event="resume"><![CDATA[https://example.com/tracking/preroll/resume]]></Tracking>
              <Tracking event="fullscreen"><![CDATA[https://example.com/tracking/preroll/fullscreen]]></Tracking>
              <Tracking event="exitFullscreen"><![CDATA[https://example.com/tracking/preroll/exit-fullscreen]]></Tracking>
              <Tracking event="skip"><![CDATA[https://example.com/tracking/preroll/skip]]></Tracking>
            </TrackingEvents>
            
            <AdParameters><![CDATA[campaign=summer2024&placement=preroll]]></AdParameters>
            
            <VideoClicks>
              <ClickThrough id="preroll-clickthrough">
                <![CDATA[https://example.com/click/preroll?utm_source=video&utm_campaign=preroll]]>
              </ClickThrough>
              <ClickTracking><![CDATA[https://example.com/tracking/preroll/click]]></ClickTracking>
              <CustomClick id="custom-action">
                <![CDATA[https://example.com/custom/preroll/action]]>
              </CustomClick>
            </VideoClicks>
            
            <MediaFiles>
              <MediaFile id="preroll-mp4-high" delivery="progressive" type="video/mp4" 
                        bitrate="2000" width="1920" height="1080" minBitrate="1500" maxBitrate="2500"
                        scalable="true" maintainAspectRatio="true" apiFramework="VPAID">
                <![CDATA[https://example.com/creatives/preroll/video-1080p.mp4]]>
              </MediaFile>
              <MediaFile id="preroll-mp4-medium" delivery="progressive" type="video/mp4" 
                        bitrate="1000" width="1280" height="720" minBitrate="750" maxBitrate="1250">
                <![CDATA[https://example.com/creatives/preroll/video-720p.mp4]]>
              </MediaFile>
              <MediaFile id="preroll-mp4-low" delivery="progressive" type="video/mp4" 
                        bitrate="500" width="854" height="480" minBitrate="300" maxBitrate="700">
                <![CDATA[https://example.com/creatives/preroll/video-480p.mp4]]>
              </MediaFile>
              <MediaFile id="preroll-webm" delivery="progressive" type="video/webm" 
                        bitrate="1000" width="1280" height="720">
                <![CDATA[https://example.com/creatives/preroll/video-720p.webm]]>
              </MediaFile>
            </MediaFiles>
            
            <Icons>
              <Icon program="AdChoices" width="20" height="15" position="topRight" 
                    apiFramework="static" offset="00:00:00" duration="00:00:30">
                <StaticResource creativeType="image/png">
                  <![CDATA[https://example.com/icons/adchoices.png]]>
                </StaticResource>
                <IconClicks>
                  <IconClickThrough>
                    <![CDATA[https://example.com/adchoices]]>
                  </IconClickThrough>
                </IconClicks>
              </Icon>
            </Icons>
          </Linear>
        </Creative>

        <!-- COMPANION BANNER FOR PRE-ROLL -->
        <Creative id="preroll-companion-001" adId="preroll-001">
          <CompanionAds>
            <Companion id="companion-300x250" width="300" height="250" assetWidth="300" assetHeight="250">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://example.com/creatives/companion/banner-300x250.jpg]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[https://example.com/click/companion?size=300x250]]>
              </CompanionClickThrough>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/tracking/companion/view]]>
                </Tracking>
              </TrackingEvents>
            </Companion>
            
            <Companion id="companion-728x90" width="728" height="90" assetWidth="728" assetHeight="90">
              <HTMLResource>
                <![CDATA[
                <div style="width:728px;height:90px;background:#f0f0f0;text-align:center;line-height:90px;">
                  <a href="https://example.com/click/companion?size=728x90" target="_blank">
                    <img src="https://example.com/creatives/companion/leaderboard-728x90.jpg" alt="Ad" style="border:none;">
                  </a>
                </div>
                ]]>
              </HTMLResource>
              <CompanionClickThrough>
                <![CDATA[https://example.com/click/companion?size=728x90]]>
              </CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>

      <Extensions>
        <Extension type="Count">
          <total_available>3</total_available>
        </Extension>
      </Extensions>
    </InLine>
  </Ad>

