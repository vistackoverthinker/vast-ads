        <!-- NON-LINEAR OVERLAY AD -->
        <Creative id="midroll-overlay-001" adId="midroll-001">
          <NonLinearAds>
            <NonLinear id="overlay-banner" width="320" height="50" minSuggestedDuration="00:00:30" 
                      expandedWidth="320" expandedHeight="200" scalable="true" maintainAspectRatio="false" 
                      apiFramework="static">
              <StaticResource creativeType="image/png">
                <![CDATA[https://example.com/creatives/overlay/banner-320x50.png]]>
              </StaticResource>
              <NonLinearClickThrough>
                <![CDATA[https://example.com/click/overlay]]>
              </NonLinearClickThrough>
              <NonLinearClickTracking>
