<VAST version="3.0">
  <!-- Pre-roll Ad -->
  <Ad id="pre-roll-1" sequence="1">
    <InLine>
      <AdSystem>Example</AdSystem>
      <AdTitle>Pre-roll Ad</AdTitle>
      <Impression><![CDATA[https://example.com/impression/pre]]></Impression>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:00:10</Duration>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/tracking/start/pre]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/tracking/complete/pre]]></Tracking>
            </TrackingEvents>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.webm]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
        <Creative>
          <CompanionAds>
            <Companion width="300" height="60">
              <StaticResource creativeType="image/png">
                <![CDATA[https://via.placeholder.com/300x60?text=Pre-roll+Companion]]>
              </StaticResource>
              <TrackingEvents>
                <Tracking event="creativeView"><![CDATA[https://example.com/tracking/companion/pre]]></Tracking>
              </TrackingEvents>
              <CompanionClickThrough><![CDATA[https://example.com/companion-click/pre]]></CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

