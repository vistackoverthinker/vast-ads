  <!-- Pause Ad (Non-linear) - FIXED STRUCTURE -->
  <Ad id="pause-1" sequence="3">
    <InLine>
      <AdSystem>ExampleAdServer</AdSystem>
      <AdTitle>Pause Video Ad</AdTitle>
      <Impression>
        <![CDATA[https://example.com/impression/pause]]>
      </Impression>
      <Creatives>
        <Creative sequence="1" id="pause-creative">
          <NonLinearAds>
            <NonLinear width="400" height="300" expandedWidth="400" expandedHeight="300" scalable="true" maintainAspectRatio="false" minSuggestedDuration="00:00:05">
              <StaticResource creativeType="image/png">
                <![CDATA[https://picsum.photos/400/300?random=4]]>
              </StaticResource>
              <NonLinearClickThrough>
                <![CDATA[https://example.com/clickthrough/pause]]>
              </NonLinearClickThrough>
              <NonLinearClickTracking>
                <![CDATA[https://example.com/tracking/click/pause]]>
              </NonLinearClickTracking>
            </NonLinear>
            <TrackingEvents>
              <Tracking event="creativeView">
                <![CDATA[https://example.com/tracking/creativeView/pause]]>
              </Tracking>
              <Tracking event="expand">
                <![CDATA[https://example.com/tracking/expand/pause]]>
              </Tracking>
              <Tracking event="collapse">
                <![CDATA[https://example.com/tracking/collapse/pause]]>
              </Tracking>
            </TrackingEvents>
          </NonLinearAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- Alternative Interactive Pause Ad with HTML -->
  <Ad id="pause-interactive-1" sequence="4">
    <InLine>
      <AdSystem>ExampleAdServer</AdSystem>
      <AdTitle>Interactive Pause Ad</AdTitle>
      <Impression>
        <![CDATA[https://example.com/impression/pause-interactive]]>
      </Impression>
      <Creatives>
        <Creative sequence="1" id="pause-interactive-creative">
          <NonLinearAds>
            <NonLinear width="350" height="200" expandedWidth="350" expandedHeight="200" scalable="false" maintainAspectRatio="false" minSuggestedDuration="00:00:10">
              <HTMLResource>
                <![CDATA[
                <div style="width:350px;height:200px;background:rgba(0,0,0,0.9);color:#fff;padding:20px;box-sizing:border-box;border-radius:10px;text-align:center;font-family:Arial,sans-serif;">
                  <h3 style="margin:0 0 10px 0;color:#ff6600;">Video Paused</h3>
                  <p style="margin:10px 0;font-size:14px;">Continue watching or explore our offers</p>
                  <button onclick="window.open('https://example.com/clickthrough/pause-interactive', '_blank')" 
                          style="background:#ff6600;color:#fff;padding:8px 16px;border:none;border-radius:5px;cursor:pointer;margin:5px;">
                    Learn More
                  </button>
                  <button onclick="this.parentElement.style.display='none'" 
                          style="background:#666;color:#fff;padding:8px 16px;border:none;border-radius:5px;cursor:pointer;margin:5px;">
                    Close
                  </button>
                </div>
                ]]>
              </HTMLResource>
              <NonLinearClickThrough>
                <![CDATA[https://example.com/clickthrough/pause-interactive]]>
              </NonLinearClickThrough>
            </NonLinear>
            <TrackingEvents>
              <Tracking event="creativeView">
                <![CDATA[https://example.com/tracking/creativeView/pause-interactive]]>
              </Tracking>
            </TrackingEvents>
          </NonLinearAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

