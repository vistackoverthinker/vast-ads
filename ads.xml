<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.2">

  <!-- ===================== -->
  <!-- ðŸŽ¬ Pre-Roll Ad        -->
  <!-- ===================== -->
  <Ad id="preroll-001">
    <InLine>
      <AdSystem version="1.0">Sample Ad Server</AdSystem>
      <AdTitle>Pre-roll Skippable Linear</AdTitle>

      <Impression><![CDATA[https://example.com/track/impression/preroll]]></Impression>

      <Creatives>
        <!-- Linear Creative -->
        <Creative sequence="1" id="preroll-linear">
          <Linear skipoffset="00:05">
            <Duration>00:00:20</Duration>

            <!-- Skip Button Overlay -->
            <Icons>
              <Icon program="skip-control" width="120" height="36" xPosition="right" yPosition="top" offset="00:05" duration="00:15">
                <StaticResource creativeType="image/png">
                  <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]>
                </StaticResource>
                <IconClicks>
                  <IconClickThrough><![CDATA[javascript:playerSkipAd()]]></IconClickThrough>
                </IconClicks>
              </Icon>
            </Icons>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start/preroll]]></Tracking>
              <Tracking event="skip"><![CDATA[https://example.com/track/skip/preroll]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/complete/preroll]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://example.com/landing/preroll]]></ClickThrough>
            </VideoClicks>

            <MediaFiles>
              <MediaFile id="mp4" delivery="progressive" type="video/mp4" width="1280" height="720" bitrate="1200">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>

        <!-- Companion Creative -->
        <Creative id="preroll-companion">
          <CompanionAds>
            <Companion width="300" height="250" id="preroll-companion1">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]>
              </StaticResource>
              <CompanionClickThrough><![CDATA[https://example.com/landing/preroll-companion]]></CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- ===================== -->
  <!-- â¸ Pause Ad            -->
  <!-- ===================== -->
  <Ad id="pause-ad">
    <InLine>
      <AdSystem>Plyr Test Server</AdSystem>
      <AdTitle>Pause Ad</AdTitle>

      <Impression><![CDATA[https://yourdomain.test/impression/pause]]></Impression>

      <Creatives>
        <!-- Linear Creative -->
        <Creative id="pause-linear">
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="1280" height="720" scalable="true" maintainAspectRatio="true">
                <![CDATA[https://cdn.plyr.io/static/demo/View_From_A_Blue_Moon_Trailer-720p.mp4]]>
              </MediaFile>
            </MediaFiles>

            <VideoClicks>
              <ClickThrough><![CDATA[https://yourdomain.test/pause-landing]]></ClickThrough>
              <ClickTracking><![CDATA[https://yourdomain.test/click/pause]]></ClickTracking>
            </VideoClicks>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://yourdomain.test/tracking/start/pause]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://yourdomain.test/tracking/firstQuartile/pause]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://yourdomain.test/tracking/midpoint/pause]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://yourdomain.test/tracking/thirdQuartile/pause]]></Tracking>
              <Tracking event="complete"><![CDATA[https://yourdomain.test/tracking/complete/pause]]></Tracking>
            </TrackingEvents>
          </Linear>
        </Creative>

        <!-- Companion Creative -->
        <Creative id="pause-companion">
          <CompanionAds>
            <Companion width="300" height="250" id="pause-companion1">
              <StaticResource creativeType="image/png">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]>
              </StaticResource>
              <CompanionClickThrough><![CDATA[https://yourdomain.test/pause-companion-landing]]></CompanionClickThrough>
              <TrackingEvents>
                <Tracking event="creativeView"><![CDATA[https://yourdomain.test/tracking/companionView/pause]]></Tracking>
              </TrackingEvents>
              <AltText>Pause Companion Ad</AltText>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- ===================== -->
  <!-- ðŸ–¼ Standalone Companion -->
  <!-- ===================== -->
  <Ad id="companion-ad">
    <InLine>
      <AdSystem>Plyr Test Server</AdSystem>
      <AdTitle>Companion Ad</AdTitle>

      <Impression><![CDATA[https://yourdomain.test/impression/companion]]></Impression>

      <Creatives>
        <Creative id="companion-creative">
          <CompanionAds>
            <Companion width="300" height="250" id="companion1">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/images/BigBuckBunny.jpg]]>
              </StaticResource>
              <CompanionClickThrough><![CDATA[https://yourdomain.test/companion-landing]]></CompanionClickThrough>
              <TrackingEvents>
                <Tracking event="creativeView"><![CDATA[https://yourdomain.test/tracking/companionView/companion1]]></Tracking>
              </TrackingEvents>
              <AltText>Main Companion Ad</AltText>
            </Companion>

            <Companion width="728" height="90" id="companion2">
