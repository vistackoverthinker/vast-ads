<VAST xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.2" xsi:noNamespaceSchemaLocation="vast.xsd">

<!-- Pause Ad (Linear Video) -->
<Ad id="pause-ad">
<InLine>
<AdSystem>AdServer</AdSystem>
<AdTitle>Pause Ad</AdTitle>
<Impression>
<![CDATA[ https://example.com/impression/pause ]]>
</Impression>
<Creatives>
<Creative id="pause-creative">
<Linear>
<Duration>00:00:15</Duration>
<MediaFiles>
<MediaFile delivery="progressive" type="video/mp4" width="1280" height="720" scalable="true" maintainAspectRatio="true">
<![CDATA[ https://sample-videos.com/video321/mp4/720/big_buck_bunny_720p_1mb.mp4 ]]>
</MediaFile>
</MediaFiles>
<VideoClicks>
<ClickThrough>
<![CDATA[ https://advertiser.com/pause-landing ]]>
</ClickThrough>
<ClickTracking>
<![CDATA[ https://example.com/click/pause ]]>
</ClickTracking>
</VideoClicks>
<TrackingEvents>
<Tracking event="start"><![CDATA[ https://example.com/tracking/start/pause ]]></Tracking>
<Tracking event="firstQuartile"><![CDATA[ https://example.com/tracking/firstQuartile/pause ]]></Tracking>
<Tracking event="midpoint"><![CDATA[ https://example.com/tracking/midpoint/pause ]]></Tracking>
<Tracking event="thirdQuartile"><![CDATA[ https://example.com/tracking/thirdQuartile/pause ]]></Tracking>
<Tracking event="complete"><![CDATA[ https://example.com/tracking/complete/pause ]]></Tracking>
</TrackingEvents>
<CompanionAds>
<Companion width="300" height="250" id="pause-companion">
<StaticResource creativeType="image/png">
<![CDATA[ https://i.postimg.cc/PrC4jkgF/sample-companion-300x250.png ]]>
</StaticResource>
<CompanionClickThrough>
<![CDATA[ https://advertiser.com/pause-companion-landing ]]>
</CompanionClickThrough>
<TrackingEvents>
<Tracking event="creativeView"><![CDATA[ https://example.com/tracking/companionView/pause ]]></Tracking>
</TrackingEvents>
<AltText>Pause Companion Ad</AltText>
</Companion>
</CompanionAds>
</Linear>
</Creative>
</Creatives>
</InLine>
</Ad>

<!-- Standalone Companion Ad -->
<Ad id="companion-ad">
<InLine>
<AdSystem>AdServer</AdSystem>
<AdTitle>Companion Ad</AdTitle>
<Impression>
<![CDATA[ https://example.com/impression/companion ]]>
</Impression>
<Creatives>
<Creative id="companion-creative">
<CompanionAds>
<Companion width="300" height="250" id="companion1">
<StaticResource creativeType="image/jpeg">
<![CDATA[ https://i.postimg.cc/2j0bLxTg/sample-companion1-300x250.jpg ]]>
</StaticResource>
<CompanionClickThrough>
<![CDATA[ https://advertiser.com/companion-landing ]]>
</CompanionClickThrough>
<TrackingEvents>
<Tracking event="creativeView"><![CDATA[ https://example.com/tracking/companionView/companion1 ]]></Tracking>
</TrackingEvents>
<AltText>Main Companion Ad</AltText>
</Companion>
<Companion width="728" height="90" id="companion2">
<HTMLResource>
<![CDATA[
<div style="background:#f0f0f0;border:1px solid #ccc;width:728px;height:90px;text-align:center;">
<a href="https://advertiser.com/companion-landing" target="_blank">
<img src="https://i.postimg.cc/KzCqTnJj/sample-companion2-728x90.jpg" width="728" height="90" alt="Banner Ad">
</a>
</div>
]]>
</HTMLResource>
<TrackingEvents>
<Tracking event="creativeView"><![CDATA[ https://example.com/tracking/companionView/companion2 ]]></Tracking>
</TrackingEvents>
</Companion>
</CompanionAds>
</Creative>
</Creatives>
</InLine>
</Ad>

<!-- Pre-Roll Ad -->
<Ad id="pre-roll">
<InLine>
<AdSystem>AdServer</AdSystem>
<AdTitle>Pre-Roll Ad</AdTitle>
<Impression>
<![CDATA[ https://example.com/impression/preroll ]]>
</Impression>
<Creatives>
<Creative id="preroll-creative">
<Linear>
<Duration>00:00:30</Duration>
<MediaFiles>
<MediaFile delivery="progressive" type="video/mp4" width="1280" height="720">
<![CDATA[ https://sample-videos.com/video321/mp4/720/big_buck_bunny_720p_1mb.mp4 ]]>
</MediaFile>
</MediaFiles>
<VideoClicks>
<ClickThrough>
<![CDATA[ https://advertiser.com ]]>
</ClickThrough>
</VideoClicks>
<TrackingEvents>
<Tracking event="start"><![CDATA[ https://example.com/tracking/start/preroll ]]></Tracking>
<Tracking event="firstQuartile"><![CDATA[ https://example.com/tracking/firstQuartile/preroll ]]></Tracking>
<Tracking event="midpoint"><![CDATA[ https://example.com/tracking/midpoint/preroll ]]></Tracking>
<Tracking event="thirdQuartile"><![CDATA[ https://example.com/tracking/thirdQuartile/preroll ]]></Tracking>
<Tracking event="complete"><![CDATA[ https://example.com/tracking/complete/preroll ]]></Tracking>
</TrackingEvents>
</Linear>
</Creative>
</Creatives>
</InLine>
</Ad>

</VAST>
